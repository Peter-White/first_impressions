extends layout

block content
  script(src="/javascripts/postData.js")
  script(src="./javascripts/counter.js")
  script(src="./javascripts/app.js")
  .reviews

  .postReview
    form(role='form', action="/reviews", method="post", style='max-width: 300px;')
          .form-group
            lable Title:
            br
            input.form-control(type='text', name="title", placeholder='Title')
          .form-group
            br
            lable Review:
            br
            textarea(type='text', name='content', rows='4', cols='50', placeholder="Enter review here")
            p#charCount 0
          .form-group
            lable Rating:
            br
            input(type="radio", name="rating", value="Thumbs Up")
            | Thumbs Up
            br
            input(type="radio", name="rating", value="Thumbs Side")
            | Thumbs Side
            br
            input(type="radio", name="rating", value="Thumbs Down")
            | Thumbs Down
          br
          button.btn.btn-defualt(type='submit') Submit
