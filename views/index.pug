extends layout

block content
  script(src="/javascripts/postData.js")
  script(src="./javascripts/app.js")
  .reviews

  .postReview
    form(role='form', action="/reviews", method="post", style='max-width: 300px;')
          .form-group
            lable Title:
            br
            input.form-control(type='text', name="title", placeholder='Title')
          .form-group
            br
            lable Review:
            br
            textarea(type='text', name='content', rows='4', cols='50', placeholder="Enter review here")
            p.textlength 0
          .form-group
            lable Rating:
            br
            input.form-control(type='number', name="rating", value='0' min="0" max="10")
            p / 10
          br
          button.btn.btn-defualt(type='submit') Submit
